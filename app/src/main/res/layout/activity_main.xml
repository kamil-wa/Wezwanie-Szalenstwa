<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_powitania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='Witamy w "Wezwaniu szaleństwa"' />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grze paragrafowej bazującej na prozie H.P Lovecrafta" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="W której wcielisz się w postać Robina Wiliamsa, 30 letniego kustosz muzeum w Arkham " />

        <Button
            android:id="@+id/Zacznij_gre_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zacznij Gre" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>