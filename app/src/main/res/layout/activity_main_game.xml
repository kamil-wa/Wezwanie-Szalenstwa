<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage"
    tools:context=".main_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HPView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/alatsi"
                android:paddingLeft="45px"
                android:paddingTop="5px"
                android:paddingRight="45px"
                android:paddingBottom="5px"
                android:text="HP: 0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/characterButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/character"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="411dp"
            android:background="#81000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:fontFamily="@font/alatsi"
                android:justificationMode="inter_word"
                android:paddingLeft="45px"
                android:paddingTop="15px"
                android:paddingRight="45px"
                android:paddingBottom="15px"
                android:text="Wczytywanie..."
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <Button
                android:id="@+id/answerOneButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:background="@drawable/button"
                android:text="Odpowiedź 1"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/answerTwoButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:background="@drawable/button"
                android:text="Odpowiedź 2"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/answerThreeButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:background="@drawable/button"
                android:text="Odpowiedź 3"
                android:textSize="12sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>